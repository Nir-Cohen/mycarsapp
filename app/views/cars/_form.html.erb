</div>

<div class="field form-group">
    <%= form.label :typeCar %>
    <%= form.text_field :typeCar, class:"form-control", placeholder:"type car" %>
</div>

<div class="field form-group">
    <%= form.label :color %>
    <%= form.text_field :color,class:"form-control", placeholder:"color" %>
</div>

